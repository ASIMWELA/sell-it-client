<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.customer.CustomerAcceptOfferActivity">

  <View
      android:id="@+id/view18"
      android:layout_width="wrap_content"
      android:layout_height="110dp"
      android:background="@drawable/login_bg"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <ImageView
      android:id="@+id/et_customer_create_appointment_appointment_back_arrow"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="6dp"
      android:padding="6dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/back_arrow_icon"
      app:tint="@color/white" />

  <TextView
      android:id="@+id/textView30"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="70dp"
      android:text="Create an Appoinment"
      android:textSize="16sp"
      android:textStyle="bold"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />


  <EditText
      android:id="@+id/et_customer_create_appointment_appointment_desc"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="32dp"
      android:layout_marginTop="2dp"
      android:layout_marginEnd="32dp"
      android:background="@drawable/input_text_area_bg"
      android:drawablePadding="4dp"
      android:ems="10"
      android:hint="Appointment Description"
      android:inputType="text|textMultiLine"
      android:maxLength="200"
      android:maxLines="4"
      android:padding="8dp"
      android:scrollHorizontally="false"
      android:singleLine="false"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/view18" />

  <EditText
      android:id="@+id/et_customer_create_appointment_appointment_date"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="32dp"
      android:layout_marginTop="16dp"
      android:background="@drawable/rounded_boaders"
      android:drawableEnd="@drawable/calendar_default"
      android:ems="10"
      android:editable="false"
      android:hint="Pick appointment date"
      android:inputType="textPersonName"
      android:padding="8dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/et_customer_create_appointment_appointment_desc" />

  <EditText
      android:id="@+id/et_customer_create_appointment_appointment_start_time"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="32dp"
      android:layout_marginTop="16dp"
      android:background="@drawable/rounded_boaders"
      android:drawableEnd="@drawable/access_time_default"
      android:ems="10"
      android:editable="false"
      android:hint="Pick starting time"
      android:inputType="textPersonName"
      android:padding="8dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/et_customer_create_appointment_appointment_date" />

  <EditText
      android:id="@+id/et_customer_create_appointment_appointment_end_time"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="32dp"
      android:layout_marginTop="16dp"
      android:background="@drawable/rounded_boaders"
      android:drawableEnd="@drawable/access_time_default"
      android:ems="10"
      android:editable="false"
      android:hint="Pick ending time"
      android:inputType="textPersonName"
      android:padding="8dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/et_customer_create_appointment_appointment_start_time" />

  <com.kusu.loadingbutton.LoadingButton
      android:id="@+id/btn_customer_create_appointment_appointment_send_appointment"
      android:layout_width="0dp"
      android:layout_height="40dp"
      android:textColor="@color/white"
      app:lb_isShadowEnable="false"
      app:lb_cornerRadius="30dp"
      android:layout_marginStart="32dp"
      android:layout_marginTop="20dp"
      android:layout_marginEnd="32dp"
      android:background="@drawable/rounded_bg"
      android:text="Button"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/et_customer_create_appointment_appointment_end_time" />

</androidx.constraintlayout.widget.ConstraintLayout>