<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/edtx_user_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="32dp"
                    android:background="@drawable/rounded_boaders"
                    android:drawableStart="@drawable/person_icon"
                    android:drawablePadding="2dp"
                    android:ems="10"
                    android:hint="user name"
                    android:inputType="textPersonName"
                    android:padding="6dp"
                    android:textColorHint="@color/cardview_dark_background"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.447"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/edtx_first_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="32dp"
                    android:background="@drawable/rounded_boaders"
                    android:drawableStart="@drawable/person_icon"
                    android:drawablePadding="2dp"
                    android:ems="10"
                    android:hint="first name"
                    android:inputType="textPersonName"
                    android:padding="6dp"
                    android:textColorHint="@color/cardview_dark_background"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edtx_user_name" />

                <EditText
                    android:id="@+id/edtx_last_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="32dp"
                    android:background="@drawable/rounded_boaders"
                    android:drawableStart="@drawable/person_icon"
                    android:drawablePadding="2dp"
                    android:ems="10"
                    android:hint="last name"
                    android:inputType="textPersonName"
                    android:padding="6dp"
                    android:textColorHint="@color/cardview_dark_background"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edtx_first_name" />

                <EditText
                    android:id="@+id/edtx_email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="32dp"
                    android:background="@drawable/rounded_boaders"
                    android:drawableStart="@drawable/email_icon"
                    android:drawablePadding="2dp"
                    android:ems="10"
                    android:hint="email"
                    android:inputType="textPersonName"
                    android:padding="6dp"
                    android:textColorHint="@color/cardview_dark_background"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edtx_last_name" />

                <EditText
                    android:id="@+id/edtx_phone_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="32dp"
                    android:background="@drawable/rounded_boaders"
                    android:drawableStart="@drawable/phone_icon"
                    android:drawablePadding="2dp"
                    android:ems="10"
                    android:hint="phone number"
                    android:inputType="textPersonName"
                    android:padding="6dp"
                    android:textColorHint="@color/cardview_dark_background"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edtx_email" />

                <EditText
                    android:id="@+id/edtx_password"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="32dp"
                    android:background="@drawable/rounded_boaders"
                    android:drawableStart="@drawable/lock_icon"
                    android:drawablePadding="2dp"
                    android:ems="10"
                    android:hint="password"
                    android:inputType="textPersonName"
                    android:padding="6dp"
                    android:textColorHint="@color/cardview_dark_background"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edtx_phone_number" />

                <android.widget.Button
                    android:id="@+id/btn_capture_user_info"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="32dp"
                    android:background="@drawable/rounded_bg"
                    android:text="Capture Information"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edtx_password" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>